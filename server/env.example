# Figma API Configuration
# Get your access token from: https://www.figma.com/developers/api#access-tokens
FIGMA_ACCESS_TOKEN=your_figma_access_token_here

# Figma File ID (found in the URL: https://www.figma.com/file/FILE_ID/...)
FIGMA_FILE_ID=your_figma_file_id_here

# Server Configuration
PORT=3200

# Auto-Sync Configuration
# Set to 'true' to enable auto-sync (default: false for safety)
AUTO_SYNC_ENABLED=false

# Auto-sync check interval in milliseconds (default: 5 minutes = 300000ms)
AUTO_SYNC_INTERVAL=300000

# Cache validity duration in milliseconds (default: 30 minutes = 1800000ms)
AUTO_SYNC_CACHE_DURATION=1800000

# Maximum API calls per hour (default: 800)
MAX_API_CALLS_PER_HOUR=800

# Development Mode Configuration
# Set to 'false' to enable auto-sync in development (default: true for safety)
DEV_DISABLE_AUTO_SYNC=true

# Environment mode (development/production)
NODE_ENV=development 